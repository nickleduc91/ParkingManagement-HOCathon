@{
}

@model ParkingGarageResultsViewModel

<div class="row mb-3">
    <div class="col-md-10">
        <div class="form-group">
            <label for="search_input">Location</label>
            <div class="input-group">
                <input id="search_input" class="form-control" type="search" placeholder="Search for a location"
                       value="@((Model != null) ? Model.Address : string.Empty)">
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label for="range_input">Distance range (km)</label>
            <div class="input-group">
                <input type="number" min="0" placeholder="Distance range" aria-label="Distance range (km)" class="form-control w-25"
                       id="range_input" value="@((Model != null) ? Model.Range.ToString() : "10")">
            </div>
        </div>
    </div>
</div>

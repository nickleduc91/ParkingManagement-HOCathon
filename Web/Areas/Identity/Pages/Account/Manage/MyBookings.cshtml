@page
@model Web.Areas.Identity.Pages.Account.Manage.MyBookingsModel
@{
}

@{
    ViewData["Title"] = "My Bookings";
    ViewData["ActivePage"] = ManageNavPages.MyBookings;
}

<h3>@ViewData["Title"]</h3>
@if(Model.BookingsModel.MyBookings.Count > 0)
{
    foreach (var booking in Model.BookingsModel.MyBookings)
    {
        <form method="post">
            <ul class="list-group w-75">
                <li class="list-group-item">
                    <div class="card bg-light pt-3 pb-2">
                        <div class="container d-flex justify-content-between">
                            <div style="font-weight: 700; color: #27346a">
                                <a asp-controller="ParkingGarage" asp-action="Details" asp-route-garageId="@booking.ParkingGarageId">@booking.ParkingGarageName</a>, Parking Spot #@booking.ParkingSpot.ParkingSpotNumber
                            </div>
                            <input type="hidden" value="@booking.ParkingSpot.Id" name="id" />
                            <button class="btn btn-outline-danger btn-sm mb-3 me-3 p-auto fs-8" type="submit">Cancel Booking <i class="bi-trash"></i></button>
                        </div>
                    </div>
                </li>
            </ul>
        </form>
    }
} else
{
    <h4>You do not have any Parking Spot Bookings</h4>
}
